/* pages/myStudy/myStudy.wxss */

.content-item{
  margin-top:40rpx;
}
.loading{
  width: 250px;
  height:250px;
  position: fixed;
  top:50%;
  left:50%;
  margin-left:-125px;
  margin-top:-125px;
}
.content-item .title{
  font-size:16px;
  padding-left:20rpx;
  border-left:2px solid #000;
  line-height:24rpx;
  height:24rpx;

}
.prograss{
  width:100%;
  height:20px;
  display: flex;


}
.prograssBar{
  width:290rpx;
  height:5rpx;
  background-color: #e9e9e9;
}
.lookNum{
  font-size:12px;
margin-bottom: 8rpx;
  color:#666;
}
.hadRead{
   font-size:10px;
   line-height:0rpx;
margin-left: 30rpx;
display: flex;
flex-direction: column;
  color:#666;
}
.had-Reads{
   width:370rpx;
    display: flex;
    flex-direction: column;
     font-size:10px;
     position:relative;
     color:#666;
  height:30rpx;
}
.listTimeLook{
  width:300rpx;
  float:left;
  -webkit-line-clamp:1;
  overflow:hidden;
}
.had-Reads .listTime{
  margin-left:0rpx;
  width:120rpx;
   position:absolute;
   right: -40px;
   bottom: 1px;
}
.content-item .content{
  margin-top:40rpx;
  display:flex;
  justify-content: space-between;
}
.box-r{
  float: right;
  width: 490rpx;
   margin-left:30rpx;
  padding-bottom:20rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}
 .box-l .img{
  width:230rpx;
  height:300rpx;
  float: left;
  margin-left: 30rpx;
    box-shadow:-77px 1px 60px;
  
}

 .box-r .book-title{
  font-size:16px;
  color:#333;
 
}
.box-r .book-desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
-webkit-line-clamp:3;
  overflow:hidden;
  line-height:1.5;
  color:#444;
  font-size:14px;
}
.box-r .author{
  display:flex;
  justify-content:space-between;
  font-size:12px;
}
.button-item{
  display: flex;
  margin-top: 40rpx;
  
}
.btn{
    color: #333;
  width: 170rpx;
  font-size: 12px;
  background: #e9e9e9;
text-align: center;
  border: 1px solid #e9e9e9;
}
.read-go{
  color: #333;
  
  width: 170rpx;
  font-size: 12px;
  background: #e9e9e9;
line-height:55rpx;

  border: 1px solid #e9e9e9;
}
.go-detail{
   color: #333;
  
  width: 170rpx;
  font-size: 12px;
  background: #e9e9e9;
line-height:55rpx;

  border: 1px solid #e9e9e9;
}
